<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_ic_usuario_recycler"
        android:layout_width="87dp"
        android:layout_height="89dp"

        android:layout_marginRight="5dp"
        android:src="@drawable/imagen_prueba_recycler"
        app:civ_border_color="@color/negro"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre ejercicio:"
                android:textColor="@color/letras"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvNombreEjercicioRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Ejercicio"
                android:textColor="@color/negro"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Músculo:"
                android:textColor="@color/letras"
                android:textSize="13sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvmusculo_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Músculo"
                android:textColor="@color/negro"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Series:"
                android:textColor="@color/letras"
                android:textSize="13sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/seriesejercicio_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Series"
                android:textColor="@color/negro"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Repeticiones:"
                android:textColor="@color/letras"
                android:textSize="13sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/repeticiones_ejercicico_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Repeticiones"
                android:textColor="@color/negro"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/editar_ejercicio_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/editarejercicio" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/grey" />

            <ImageButton
                android:id="@+id/eliminar_ejercicio_recycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey" />


    </LinearLayout>


</LinearLayout>